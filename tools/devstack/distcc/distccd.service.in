[Unit]
Description=distccd (distributed C/C++ compiler)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=distcc
Group=distcc
ExecStart=/usr/bin/distccd --no-detach --listen 0.0.0.0 --port @PORT@ --jobs @JOBS@ @ALLOW_ARGS@
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target

